@{
    ViewData["Title"] = "Update Data";
}

@model MyProject.Models.Address

<div>
    <h2>Edit Data</h2>
</div>

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UpdateData">
        <div class="row mb-4">
            <div class="col-sm-5">
                <input type="hidden" class="form-control" asp-for="Id">
            </div>
        </div>
      
        <div class="row mb-4">
            <div class="col-sm-5">
                <div class="form-outline mb">
                    <input type="text" id="form3Example1" asp-for="Name" class="form-control" />
                    <label class="form-label" for="form3Example1">Name:</label>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-sm-5">
                <div class="form-outline mb">
                    <input type="email" id="form3Example3" asp-for="Email" class="form-control" />
                    <label class="form-label" for="form3Example3">Email:</label>
                </div>
            </div>
        </div>

        <div class="form-outline mb-4">
            <input type="password" id="form3Example3" name="Password" class="form-control" />
            <label class="form-label" for="form3Example3">Password:</label>
        </div>


        <div class="row mb-4">
             <div class="col-sm-5">
                 <div class="form-outline mb">
                        <input type="text" id="form3Example1" asp-for="HomeTown" class="form-control" />
                        <label class="form-label" for="form3Example1">Address:</label>
                 </div>
             </div>
        </div>

        <div class="row mb-4">
            <div class="col-sm-5">
                <div class="form-outline mb-4">
                    <input type="text" id="form3Example1" asp-for="Phone" max="9" maxlength="10" pattern="[0-9]+" name="Phone" class="form-control" />
                    <label class="form-label" for="form3Example1">Phone:</label>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-sm-5">
                <div class="form-outline mb-4">
                    <label for="formFileSm" class="form-label">Image:</label>
                    <input class="form-control form-control-sm" id="formFileSm" asp-for="Image" type="file">
                </div>
            </div>
        </div>
        <br />


        <div class="col-12 pb-3">
                <label class="form-check-label" for="inlineCheckbox1">Gender:</label>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="inlineCheckbox1" asp-for="Gender" name="Gender" value="Male">
                    <label class="form-check-label" for="inlineCheckbox1">
                        Male
                    </label>
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="inlineCheckbox2" asp-for="Gender" name="Gender" value="Female">
                    <label class="form-check-label" for="inlineCheckbox2">
                        Female
                    </label>
                </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-4">Update</button>
</form>
